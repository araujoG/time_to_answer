<!DOCTYPE html>
<html>
	<head>

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>TimeToAnswer</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag    'application' %>
		<%= stylesheet_link_tag    'admin_devise' %>
		
	</head>
	<body class="bg-gradient-primary">
		<div class="container">
			<%= yield %>
		</div>

		<%= javascript_include_tag 'application' %>
		<%= javascript_include_tag 'admin_devise' %>
		<!--<script src="https://kit.fontawesome.com/650524cba9.js" crossorigin="anonymous"></script>-->

		<script type="text/javascript">
			<% if flash %>
				<% flash.each do |key, value| %>
					// $.growl({ title: "Growl", message: "The kitten is awake!"});
					// $.growl.error({ message: "The kitten is attacking!" });
					$.growl.warning({ title: "Aviso", message: "<%= value %>" });
					// $.growl.notice({ title: "Sucesso", message: 'eRROOOOOO' });
				<% end %>
			<% end %>
		</script>

	</body>
</html>
