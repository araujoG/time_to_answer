			</div>
		</div>
		<!-- Modal -->
		<div class="modal fade" id="avatarModal" tabindex="-1" role="dialog" aria-labelledby="avatarModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Avatar</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<%= form_with(url: users_backoffice_profile_path, model: current_user, class:"form-horizontal form-label-left") do |form| %>
						<div class="modal-body d-flex">
								<%= form.fields_for :user_profile do |profile_form| %>
									<div class="form-group">
										<div class="mb-3">
											<%= profile_form.label :avatar, class:"font-weight-bold" %>
											<%= image_tag(avatar_url, alt: '', class: "img-circle profile_img", name: "profileImg")%>
										</div>
										<%= profile_form.file_field :avatar, placeholder: true %>
									</div>
								<% end %>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							<%= form.submit "Salvar", class:"btn btn-primary" %>
						</div>
					<% end %>
				</div>
			</div>
