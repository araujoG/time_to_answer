<h1 class="mb-4"><%= t('messages.listOf',model: @questions.model_name.human(count: 2))%></h1>
<div class="table-responsive">
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th><%= tAtt(@questions,:description)%></th>
				<th><%= tAtt(@questions,:subject)%></th>
				<th class="align-middle text-center">
					<%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do  %>
						<i class="fa fa-plus"></i>
					<% end %>
				</th>
			</tr>
		</thead>
		<tbody>
		<% @questions.each do |question| %>
			<tr>
				<td class="align-middle"><%= question.id %></td>
				<td class="align-middle"><%= question.description %></td>
				<td class="align-middle"><%= question.subject.description %></td>
				<td class="align-middle text-center" style="width: 120px">
					<%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do  %>
						<i class="fa fa-edit"></i>
					<% end %>
					<%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm', item: question.description.truncate(25))} do  %>
						<i class="fa fa-minus"></i>
					<% end %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<div class="text-center">
		<%= paginate @questions %>
	</div>
</div>
